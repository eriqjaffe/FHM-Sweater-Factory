{
  "name": "sweaterfactory",
  "version": "0.1.2",
  "description": "FHM Sweater Factory",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Eriq Jaffe",
    "email": "eriqjaffe@gmail.com",
    "url": "https://github.com/eriqjaffe/FHM_Sweater_Factory"
  },
  "license": "ISC",
  "dependencies": {
    "@svgdotjs/svg.js": "^3.1.1",
    "electron-build": "^0.0.3",
    "express": "^4.17.1",
    "imagemagick-cli": "^0.5.0",
    "jimp": "^0.16.1",
    "svgdom": "^0.1.10",
    "text-to-svg": "^3.1.5",
    "ttfinfo": "^0.2.0"
  },
  "packageManager": "yarn@3.1.0",
  "devDependencies": {
    "electron": "^16.0.0",
    "electron-builder": "^22.13.1"
  },
  "build": {
    "asar": true,
    "appId": "com.ootputilities.sweaterfactory",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "artifactName": "${productName}_${version}_setup.${ext}",
      "menuCategory": "OOTP Utilities",
      "shortcutName": "FHM Sweater Factory",
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "deb": {}
  }
}
